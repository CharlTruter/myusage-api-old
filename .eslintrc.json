{
  "extends": "airbnb",
  "rules": {
        "no-underscore-dangle":
          [
            "error",
            {
              "allow": [
                "_this",
                "_defaults"
              ]
            }
          ],
        "prefer-arrow-callback": "off",
        "import/no-dynamic-require": "off",
        "strict": [
          2,
          "safe"
        ],
        "object-shorthand": "off",
        "global-require": "off",
        "no-loop-func": "off"
  },
  "parserOptions": {
    "sourceType": "script"
  },
  "env": {
    "mocha": true
  }
}
